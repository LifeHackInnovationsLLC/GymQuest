<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_back_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:background="@color/appBackgroundColor"
    tools:context="com.lifehackinnovations.gymquest.myapplication.Fragments.`8RegistrationFragment`">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/gym_quest_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/garamond_bold"
                    android:gravity="center_vertical"
                    android:text="WELCOME"
                    android:textAlignment="center"
                    android:textColor="@color/fontColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/garamond_bold"
                    android:gravity="center_vertical"
                    android:text="REGISTER BY SOCIAL MEDIA:"
                    android:textAlignment="center"
                    android:textColor="@color/fontColor"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/register_facebook_button"
                    android:src="@drawable/facebook_icon"
                    android:padding="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/register_twitter_button"
                    android:src="@drawable/twitter_icon"
                    android:padding="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/register_google_button"
                    android:src="@drawable/google_plus_icon"
                    android:padding="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/garamond_bold"
                android:gravity="center_vertical"
                android:text="REGISTER BY EMAIL:"
                android:textAlignment="center"
                android:textColor="@color/fontColor"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp">

                <TextView
                    android:id="@+id/avatar_name_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garamond_bold"
                    android:text="AVATAR'S NAME:"
                    android:textColor="@color/fontColor"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/avatar_name_edittext"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/avatar_name_label"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/email_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garamond_bold"
                    android:layout_below="@+id/avatar_name_edittext"
                    android:text="E-MAIL:"
                    android:textColor="@color/fontColor"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/email_edittext"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/email_label"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/confirm_email_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garamond_bold"
                    android:layout_below="@+id/email_edittext"
                    android:text="CONFIRM E-MAIL:"
                    android:textColor="@color/fontColor"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/confirm_email_edittext"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/confirm_email_label"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/password_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garamond_bold"
                    android:layout_below="@+id/confirm_email_edittext"
                    android:text="PASSWORD:"
                    android:textColor="@color/fontColor"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/password_edittext"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/password_label"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/confirm_password_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garamond_bold"
                    android:layout_below="@+id/password_edittext"
                    android:text="CONFIRM PASSWORD:"
                    android:textColor="@color/fontColor"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/confirm_password_edittext"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/confirm_password_label"
                    android:background="#ffffff" />

                <CheckBox
                    android:id="@+id/terms_and_conditions_checkbox"
                    android:background="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/confirm_password_edittext" />

                <TextView
                    android:id="@+id/terms_and_conditions_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garamond_bold"
                    android:layout_below="@+id/confirm_password_edittext"
                    android:layout_toRightOf="@+id/terms_and_conditions_checkbox"
                    android:text="TERMS AND CONDITIONS:"
                    android:textColor="@color/fontColor"
                    android:textSize="15sp" />

                <TextView
                    tools:visibility="gone"
                    android:id="@+id/terms_and_conditions_detail_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garamond_bold"
                    android:layout_below="@+id/terms_and_conditions_label"
                    android:layout_toRightOf="@+id/terms_and_conditions_checkbox"
                    android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit lobortis nisl ut aliquip ex ea commodo consequat."
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_marginTop="30dp"
                    tools:layout_below="@+id/terms_and_conditions_label"
                    android:layout_below="@+id/terms_and_conditions_detail_label"
                    android:src="@drawable/register_button"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>